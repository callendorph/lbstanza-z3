#use-added-syntax(tests)
defpackage z3/tests/Sorts :
  import core
  import z3/Context
  import z3/Sorts
  import z3/ListSort
  import z3/AST/Functions
  import z3/Symbols
  import z3/Enums/Z3_sort_kind

deftest(sorts) test-bool-sort:

  val cfg = Config()
  val ctx = Context(cfg)

  val boolSort = BoolSort(ctx)

  val id = get-sort-id(boolSort)
  val nameSymb = get-sort-name(boolSort)
  #EXPECT(get-symbol-string(nameSymb) == "Bool")

  val bAST = to-ast(boolSort)

  val kind = get-sort-kind(boolSort)
  #EXPECT(kind is Z3_BOOL_SORT)

